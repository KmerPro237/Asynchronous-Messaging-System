<?xml version="1.0" encoding="UTF-8" ?>
<configuration status="INFO">
    <appenders>
        <Console name="DistributedSystemConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <file name="DistributedSystemLogFile" fileName="DistributedSystems.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </file>
    </appenders>
    <loggers>
        <Root>
            <AppenderRef ref="DistributedSystemConsole"/>
            <AppenderRef ref="DistributedSystemLogFile"/>
        </Root>
    </loggers>
</configuration>